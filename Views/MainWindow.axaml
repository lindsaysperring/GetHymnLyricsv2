<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GetHymnLyricsv2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="GetHymnLyricsv2.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Hymn Editor">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Command="{Binding OpenFileCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Open File" 
                    Margin="0,0,10,0"/>
            <Button Command="{Binding SaveFileCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Content="Save File"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*">
            <!-- Song List -->
            <Grid Grid.Column="0" RowDefinitions="Auto,*" Margin="10">
                <TextBox Grid.Row="0"
                        Text="{Binding SearchText}"
                        Watermark="Search songs..."
                        Margin="0,0,0,10"/>
                <ListBox Grid.Row="1"
                        ItemsSource="{Binding FilteredSongs}"
                        SelectedItem="{Binding SelectedSong}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Number, StringFormat='#{0}'}" 
                                        FontWeight="Bold"/>
                                <TextBlock Text="{Binding Title}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Song Details and Sections -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*" Margin="10">
                <!-- Song Details -->
                <StackPanel Grid.Row="0" IsVisible="{Binding SongDetails.Song, Converter={x:Static ObjectConverters.IsNotNull}}">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SongDetails.Song.Title}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Number:" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SongDetails.Song.Number}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Words Author:" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SongDetails.Song.WordsAuthor}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Words Public Domain:" Margin="0,0,10,5"/>
                        <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding SongDetails.Song.WordsPublicDomain}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Words License Covered:" Margin="0,0,10,5"/>
                        <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding SongDetails.Song.WordsLicenseCovered}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Music Author:" Margin="0,0,10,5"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SongDetails.Song.MusicAuthor}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Music Public Domain:" Margin="0,0,10,5"/>
                        <CheckBox Grid.Row="6" Grid.Column="1" IsChecked="{Binding SongDetails.Song.MusicPublicDomain}" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Music License Covered:" Margin="0,0,10,5"/>
                        <CheckBox Grid.Row="7" Grid.Column="1" IsChecked="{Binding SongDetails.Song.MusicLicenseCovered}" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>

                <!-- Song Sections and Order -->
                <Grid Grid.Row="1" RowDefinitions="Auto,*" ColumnDefinitions="*,*" Margin="0,10,0,0">
                    <!-- Sections -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                            Text="Sections" 
                            FontWeight="Bold" 
                            Margin="0,0,0,10"/>
                    
                    <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,*">
                        <Button Grid.Row="0" 
                                Command="{Binding SongSections.AddSectionCommand}"
                                Content="Add Section"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,10"/>
                        
                        <ScrollViewer Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding SongSections.Sections}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,10,20">
                                            <Grid ColumnDefinitions="*,Auto,Auto">
                                                <TextBox Grid.Column="0" 
                                                        Text="{Binding SectionName}"
                                                        FontWeight="Bold"
                                                        Margin="0,0,10,5"/>
                                                <TextBox Grid.Column="1"
                                                        Text="{Binding SectionComments}"
                                                        Watermark="Comments"
                                                        Width="200"
                                                        Margin="0,0,10,0"/>

                                                <Button Grid.Column="2"
                                                        Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).SongSections.RemoveSectionCommand}"
                                                        CommandParameter="{Binding}"
                                                        Content="×"
                                                        Width="30"
                                                        Height="30"/>
                                            </Grid>
                                            <TextBox Text="{Binding SectionText}"
                                                    AcceptsReturn="True"
                                                    TextWrapping="Wrap"
                                                    Height="100"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <!-- Order -->
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                            Text="Song Order" 
                            FontWeight="Bold" 
                            Margin="10,0,0,10"/>
                    
                    <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto,*" Margin="10,0,0,0">
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                            <ComboBox Grid.Column="0"
                                    ItemsSource="{Binding SongSections.Sections}"
                                    SelectedItem="{Binding SongSections.SelectedSection}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,10,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding SectionName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="1"
                                    Command="{Binding SongSections.AddToOrderCommand}"
                                    Content="Add to Order"/>
                        </Grid>

                        <ScrollViewer Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding SongSections.SongOrder}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,10">
                                            <StackPanel Grid.Column="0" 
                                                    Orientation="Vertical" 
                                                    Margin="0,0,10,0">
                                                <Button Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).SongSections.MoveOrderUpCommand}"
                                                        CommandParameter="{Binding}"
                                                        Content="↑"
                                                        Width="30"
                                                        Height="30"
                                                        Margin="0,0,0,5"/>
                                                <Button Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).SongSections.MoveOrderDownCommand}"
                                                        CommandParameter="{Binding}"
                                                        Content="↓"
                                                        Width="30"
                                                        Height="30"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" 
                                                    Text="{Binding Section.SectionName}"
                                                    VerticalAlignment="Center"/>
                                            
                                            <Button Grid.Column="2"
                                                    Command="{Binding $parent[ItemsControl].((vm:MainWindowViewModel)DataContext).SongSections.RemoveFromOrderCommand}"
                                                    CommandParameter="{Binding}"
                                                    Content="×"
                                                    Width="30"
                                                    Height="30"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
